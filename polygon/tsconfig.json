{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
        "@utils/*": ["../utils/*"],
        "@set/typechain/*": ["../typechain/*"],
        "@deployments/*": ["deployments/*"]
    }
  },
  "include": [
    "../types/**/*.ts",
    "./test/**/*.ts",
    "./deploy/**/*.ts",
    "./deployments/**/*.ts",
  ],
  "files": [
    "hardhat.config.ts",
  ]
}
